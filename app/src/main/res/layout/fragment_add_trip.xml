<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow_back"
        app:tint="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/plus_jakarta_sans"
        android:text="Mau Kemana\nSelanjutnya?"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <EditText
        android:id="@+id/etOrigin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_input_field"
        android:drawableEnd="@drawable/ic_location_outline"
        android:drawablePadding="12dp"
        android:drawableTint="@color/semi_blue_light"
        android:fontFamily="@font/plus_jakarta_sans"
        android:hint="Mulainya dari mana?"
        android:paddingHorizontal="16dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/semi_blue_light"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input_field"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_calendar_outline"
        android:drawablePadding="12dp"
        android:drawableTint="@color/semi_blue_light"
        android:focusable="false"
        android:fontFamily="@font/plus_jakarta_sans"
        android:hint="Kapan waktunya?"
        android:inputType="date"
        android:paddingHorizontal="16dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/semi_blue_light"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/etOrigin" />

    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input_field"
        android:drawableEnd="@drawable/ic_location_outline"
        android:drawablePadding="12dp"
        android:drawableTint="@color/semi_blue_light"
        android:fontFamily="@font/plus_jakarta_sans"
        android:hint="Kemana tujuan kamu?"
        android:paddingHorizontal="16dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/semi_blue_light"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/etDate" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_button_white"
        android:backgroundTint="@color/blue_light"
        android:fontFamily="@font/plus_jakarta_sans"
        android:text="Simpan Perjalanan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/etDestination" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="id.ac.pnm.anterinapp.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_schedule"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_home_to_daftarPesanan"
            app:destination="@id/daftarPesananFragment" />
    </fragment>

    <fragment
        android:id="@+id/voucherFragment"
        android:name="id.ac.pnm.anterinapp.VoucherFragment"
        android:label="VoucherFragment" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="id.ac.pnm.anterinapp.HistoryFragment"
        android:label="HistoryFragment">
        <action
            android:id="@+id/action_history_to_daftarPesanan"
            app:destination="@id/daftarPesananFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="id.ac.pnm.anterinapp.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/combinationFragment"
        android:name="id.ac.pnm.anterinapp.CombinationFragment"
        android:label="fragment_combination_select" />


    <fragment
        android:id="@+id/scheduleFragment"
        android:name="id.ac.pnm.anterinapp.ScheduleFragment"
        android:label="Jadwal Perjalanan"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/action_schedule_to_addTrip"
            app:destination="@id/addTripFragment" />
        <action
            android:id="@+id/action_schedule_to_detailJadwal"
            app:destination="@id/detailJadwalFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTripFragment"
        android:name="id.ac.pnm.anterinapp.AddTripFragment"
        android:label="Tambah Perjalanan"
        tools:layout="@layout/fragment_add_trip">
        <action
            android:id="@+id/action_addTrip_to_success"
            app:destination="@id/successFragment" />
    </fragment>

    <fragment
        android:id="@+id/successFragment"
        android:name="id.ac.pnm.anterinapp.SuccessFragment"
        android:label="Sukses"
        tools:layout="@layout/fragment_success">
        <action
            android:id="@+id/action_success_to_schedule"
            app:destination="@id/scheduleFragment"
            app:popUpTo="@id/scheduleFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/detailJadwalFragment"
        android:name="id.ac.pnm.anterinapp.DetailJadwalFragment"
        android:label="Detail Jadwal"
        tools:layout="@layout/fragment_detail_jadwal" />

    <fragment
        android:id="@+id/daftarPesananFragment"
        android:name="id.ac.pnm.anterinapp.DaftarPesananFragment"
        android:label="Daftar Pesanan"
        tools:layout="@layout/fragment_daftar_pesanan">
        <action
            android:id="@+id/action_daftarPesanan_to_detailPesanan"
            app:destination="@id/detailPesananFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailPesananFragment"
        android:name="id.ac.pnm.anterinapp.DetailPesananFragment"
        android:label="Detail Pesanan"
        tools:layout="@layout/fragment_detail_pesanan" />

</navigation>
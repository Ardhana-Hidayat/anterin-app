<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="id.ac.pnm.anterinapp.fragment.HomeFragment"
        android:label="HomeFragment">
        <argument
            android:name="showBottomNav"
            app:argType="boolean"
            android:defaultValue="true" />

        <action
            android:id="@+id/action_home_to_schedule"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_home_to_orderList"
            app:destination="@id/orderListFragment" />
    </fragment>

    <fragment
        android:id="@+id/voucherFragment"
        android:name="id.ac.pnm.anterinapp.fragment.VoucherFragment"
        android:label="VoucherFragment">
        <argument
            android:name="showBottomNav"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="id.ac.pnm.anterinapp.fragment.HistoryFragment"
        android:label="HistoryFragment">
        <argument
            android:name="showBottomNav"
            app:argType="boolean"
            android:defaultValue="true" />

        <action
            android:id="@+id/action_history_to_orderList"
            app:destination="@id/orderListFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="id.ac.pnm.anterinapp.fragment.ProfileFragment"
        android:label="ProfileFragment">
        <argument
            android:name="showBottomNav"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/combinationFragment"
        android:name="id.ac.pnm.anterinapp.CombinationFragment"
        android:label="fragment_combination_select" />

    <fragment
        android:id="@+id/destinationFragment"
        android:name="id.ac.pnm.anterinapp.DestinationFragment"
        android:label="fragment_destination" />

    <fragment
        android:id="@+id/transportSelectionFragment"
        android:name="id.ac.pnm.anterinapp.fragment.TransportSelectionFragment"
        android:label="fragment_transport_selection" />

    <fragment
        android:id="@+id/paymentFragment"
        android:name="id.ac.pnm.anterinapp.PaymentFragment"
        android:label="PaymentFragment" />

    <fragment
        android:id="@+id/successFragment"
        android:name="id.ac.pnm.anterinapp.SuccessFragment"
        android:label="Sukses"
        tools:layout="@layout/fragment_success">
        <action
            android:id="@+id/action_success_to_schedule"
            app:destination="@id/scheduleFragment"
            app:popUpTo="@id/scheduleFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="id.ac.pnm.anterinapp.fragment.ScheduleFragment"
        android:label="Schedule"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/action_schedule_to_addTrip"
            app:destination="@id/addTripFragment" />
        <action
            android:id="@+id/action_schedule_to_scheduleDetail"
            app:destination="@id/scheduleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTripFragment"
        android:name="id.ac.pnm.anterinapp.AddTripFragment"
        android:label="Add Trip"
        tools:layout="@layout/fragment_add_trip">
        <action
            android:id="@+id/action_addTrip_to_success"
            app:destination="@id/successFragment" />
    </fragment>

    <fragment
        android:id="@+id/scheduleDetailFragment"
        android:name="id.ac.pnm.anterinapp.ScheduleDetailsFragment"
        android:label="Schedule Detail"
        tools:layout="@layout/fragment_schedule_details" />

    <fragment
        android:id="@+id/orderListFragment"
        android:name="id.ac.pnm.anterinapp.OrderingListFragment"
        android:label="Order List"
        tools:layout="@layout/fragment_ordering_list">
        <action
            android:id="@+id/action_orderList_to_orderDetail"
            app:destination="@id/orderDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="id.ac.pnm.anterinapp.OrderingDetailsFragment"
        android:label="Order Detail"
        tools:layout="@layout/fragment_ordering_details" />

</navigation>